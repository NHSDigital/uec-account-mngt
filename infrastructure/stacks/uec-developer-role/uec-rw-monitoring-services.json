{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "VisualEditor0",
            "Effect": "Allow",
            "Action": [
                "cloudwatch:GetDashboard",
                "cloudwatch:GetInsightRuleReport",
                "firehose:*",
                "cloudwatch:ListTagsForResource",
                "cloudwatch:GetMetricStream",
                "kinesis:*"
            ],
            "Resource": [
                "arn:aws:firehose:*:410123189863:deliverystream/*",
                "arn:aws:cloudwatch:eu-west-2:410123189863:*:*",
                "arn:aws:kinesis:*:410123189863:*/*/consumer/*:*",
                "arn:aws:kinesis:*:410123189863:stream/*",
                "arn:aws:kms:*:410123189863:key/*"
            ]
        },
        {
            "Sid": "VisualEditor1",
            "Effect": "Allow",
            "Action": [
                "kinesis:UpdateStreamMode",
                "kinesis:ListStreams",
                "kinesis:EnableEnhancedMonitoring",
                "kinesis:UpdateShardCount",
                "firehose:ListDeliveryStreams",
                "kinesis:DescribeLimits",
                "kinesis:DisableEnhancedMonitoring"
            ],
            "Resource": "*"
        },
        {
            "Sid": "VisualEditor2",
            "Effect": "Allow",
            "Action": "xray:*",
            "Resource": "arn:aws:xray:eu-west-2:410123189863:*:*"
        },
        {
            "Sid": "VisualEditor3",
            "Effect": "Allow",
            "Action": "logs:*",
            "Resource": "arn:aws:logs:eu-west-2:410123189863:*:*"
        },
        {
            "Sid": "VisualEditor4",
            "Effect": "Allow",
            "Action": [
                "cloudwatch:GetMetricData",
                "cloudwatch:ListMetricStreams",
                "cloudwatch:ListDashboards",
                "cloudwatch:GetMetricStatistics",
                "cloudwatch:GetMetricWidgetImage",
                "cloudwatch:ListManagedInsightRules",
                "cloudwatch:ListMetrics"
            ],
            "Resource": "arn:aws:cloudwatch:eu-west-2:410123189863:*:*"
        },
        {
            "Sid": "VisualEditor5",
            "Effect": "Allow",
            "Action": "s3:*",
            "Resource": "arn:aws:s3:::*/*"
        }
    ]
}
